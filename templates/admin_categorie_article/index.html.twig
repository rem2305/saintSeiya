{% extends 'base.html.twig' %}

{% block title %}CategorieArticle index{% endblock %}

{% block body %}
    <h1>Toutes les Categorie d'articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie_article in categorie_articles %}
            <tr>
                <td>{{ categorie_article.id }}</td>
                <td>{{ categorie_article.name }}</td>
                <td>
                    <a href="{{ path('app_admin_categorie_article_show', {'id': categorie_article.id}) }}">voir</a>
                    <a href="{{ path('app_admin_categorie_article_edit', {'id': categorie_article.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_categorie_article_new') }}">Creer une nouvelle catégorie</a>
{% endblock %}
