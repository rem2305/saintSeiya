{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    {# Ici j'utilise la structure Hn afin que mon article soit correctement construit en termes de SEO #}
    <h1 class="text-center">{{ article.title }}</h1>
    
    {# J'utilise différentes classes bootstrap pour centrer mon contenu et l'aérer avec des marges #}
<div class="justify-content-center text-center mb-3 py-3">
        {# je récupère l'image en relation avec l'article #}
        <img class="img-fluid" width="50%" src="{{ asset('imagesArticle/' ~ article.image) }}" alt="">
        {# je récupère les différentes données de l'article #}
        <p class="mt-3">{{article.introduction}}</p>
        <h2><p>{{article.titreSecondaire}}</p></h2>
        <p>{{article.content}}</p>
        <h3><p>{{article.TitreConclusion}}</p></h3>
        <p>{{article.Conclusion}}</p>
        {# je récupère la date de création et défini de quelle manière elle apparait #}
        {# j'intègre l'auteur et la catégorie de l'article #}
        <h6 class="text-muted"> {{article.dateDeCreation | date("d/m/Y \à H\\hi")}} - {{article.user.pseudo}} - {{article.categorieArticle}}</h6>
</div>

    

{% endblock %}
