{% extends 'base.html.twig' %}

{% block title %}CategorieArticle index{% endblock %}

{% block body %}
    <h1>Les Categorie des Articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom de la catégorie</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for categorie_article in categorie_articles %}
            <tr>
                <td>{{ categorie_article.name }}</td>
                <td>
                    <a href="{{ path('app_categorie_article_show', {'id': categorie_article.id}) }}">consulter la liste des articles</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">aucune catégorie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
