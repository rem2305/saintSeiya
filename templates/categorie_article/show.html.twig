{% extends 'base.html.twig' %}

{% block title %}{{ categorie_article.name }}{% endblock %}

{% block body %}

    <h1>{{ categorie_article.name }}</h1>
    
    <a href="{{ path('app_categorie_article_index') }}">Retourner à la liste des catégories</a>


    <div class="row d-flex justify-content-center text-center">
            {% for article in articles | reverse %}
        <div class="card py-3 m-1 col-2" style="width: 18rem;">
           
            {% if article.image %}            
            <img src="{{ asset('imagesArticle/' ~ article.image) }}" class="card-img-top" alt="">
            {% endif %}

            <div class="card-body">
                <div>
                    {# <a href=""><i class="fas fa-edit mx-1 text-success"></i></a>
                    <a href="">supprimer</a> #}
                </div>
                <h5 class="card-title">{{ article.title }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">créé le : {{ article.dateDeCreation | date("d/m/Y \à H\\hi") }}</h6>
                {# <h6>{{ article.auteur }}</h6> #}
                <p class="card-text">{{ article.content | slice(0, 85) }}...</p>
                <a href="{{ path("app_article_show", {id: article.id} ) }}" class="btn btn-primary card-link">lire l'article</a>
                
            </div>
        </div>
            {% endfor %}
    </div>

{% endblock %}
