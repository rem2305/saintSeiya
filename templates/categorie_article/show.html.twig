{% extends 'base.html.twig' %}

{% block title %}CategorieArticle{% endblock %}

{% block body %}
    <h1>CategorieArticle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie_article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ categorie_article.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_categorie_article_index') }}">back to list</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
