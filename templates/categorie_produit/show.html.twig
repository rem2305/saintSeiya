{% extends 'base.html.twig' %}

{% block title %}{{ categorie_produit.name }}{% endblock %}

{% block body %}
    {# <a href="{{ path('app_categorie_produit_index') }}">Retourner à la liste des catégories</a>

    <div class= "mt-5">

    <table class="table">
        <thead>
            <tr>
                <th>Nom du produit</th>
                <th>Contenu de l'article</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.title }}</td>
                <td>{{ produit.content }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">consulter</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucun article trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table> #}

<h1>{{ categorie_produit.name }}</h1>
    
    <a href="{{ path('app_categorie_produit_index') }}">Retourner à la liste des catégories</a>


    <div class="row d-flex justify-content-center text-center">
            {% for produit in produits | reverse %}
        <div class="card py-3 m-1 col-2" style="width: 18rem;">
           
                      
            <img src="{{ asset('imagesProduit/' ~ produit.images[0].name) }}" style="aspect-ratio: 2/3 ; object-fit:cover" class="card-img-top" alt="">
           

            <div class="card-body">
                <div>
                    {# <a href=""><i class="fas fa-edit mx-1 text-success"></i></a>
                    <a href="">supprimer</a> #}
                </div>
                <h5 class="card-title">{{ produit.title }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">créé le : {{ produit.dateDeCreation | date("d/m/Y \à H\\hi") }}</h6>
                {# <h6>{{ produit.auteur }}</h6> #}
                <p class="card-text">{{ produit.content | slice(0, 85) }}...</p>
                <a href="{{ path("app_produit_show", {id: produit.id} ) }}" class="btn btn-primary card-link">voir le produit</a>
                
            </div>
        </div>
            {% endfor %}
    </div>
 
{% endblock %}
