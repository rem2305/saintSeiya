{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Saint Seiya Infinite !{% endblock %}

{% block body %}
    {# <h1 class=" mb-5 text-center  p-3">Saint Seiya Infinite</h1> #}
    
    <h2 class="mt-5 mb-2 text-center">Les derniers articles</h2>

<div class="card-deck row d-flex justify-content-center text-center py-3">
{% for article in articles %}

            
        <div class="card py-3 m-1 col-2" style="width: 18rem;">
           
            {% if article.image %}            
            <img src="{{ asset('imagesArticle/' ~ article.image) }}"  style="aspect-ratio: 2/2 ; object-fit:cover" class="card-img-top" alt="">
            {% endif %}

            <div class="card-body">
                <div>
                    {# <a href=""><i class="fas fa-edit mx-1 text-success"></i></a>
                    <a href="">supprimer</a> #}
                </div>
                <h5 class="card-title">{{ article.title }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">créé le : {{ article.dateDeCreation | date("d/m/Y \à H\\hi") }}</h6>
                {# <h6>{{ article.auteur }}</h6> #}
                <h6 class="card-subtitle mb-2 text-muted">{{ article.categorieArticle.name}}</h6>
                <p class="card-text">{{ article.content | slice(0, 85) }}...</p>
                <a href="{{ path("app_article_show", {id: article.id} ) }}" class="btn btn-danger card-link">lire l'article</a>
                
            </div>
        </div>
{% endfor %}
</div>


<hr>
<h2 class="mt-5 mb-2 text-center">Les derniers produits</h2>

<div class="row d-flex justify-content-center text-center py-3">
{% for produit in produits %}
        
        <div class="card py-3 m-1 col-2" style="width: 18rem;">
           
                     
            <img src="{{ asset('imagesProduit/' ~ produit.images[0].name) }}" style="aspect-ratio: 2/2 ; object-fit:cover" class="card-img-top" alt="">
            

            <div class="card-body">
                <div>
                    {# <a href=""><i class="fas fa-edit mx-1 text-success"></i></a>
                    <a href="">supprimer</a> #}
                </div>
                <h5 class="card-title">{{ produit.title }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">créé le : {{ produit.dateDeCreation | date("d/m/Y \à H\\hi") }}</h6>
                {# <h6>{{ produit.auteur }}</h6> #}
                <h6 class="card-subtitle mb-2 text-muted">{{ produit.categorieProduit.name}}</h6>
                <p class="card-text">{{ produit.content | slice(0, 85) }}...</p>
                <a href="{{ path("app_produit_show", {id: produit.id} ) }}" class="btn btn-danger card-link">voir le produit</a>
                
            </div>
        </div>
            
{% endfor %}
</div>

{% endblock %}
