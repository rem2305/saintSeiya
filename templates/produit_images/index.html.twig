{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Prix</th>
                <th>Vendeur1</th>
                <th>Vendeur2</th>
                <th>Introduction</th>
                <th>TitreSecondaire</th>
                <th>TitreConclusion</th>
                <th>Conclusion</th>
                <th>Image</th>
                <th>DateDeCreation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.title }}</td>
                <td>{{ produit.content }}</td>
                <td>{{ produit.Prix }}</td>
                <td>{{ produit.Vendeur1 }}</td>
                <td>{{ produit.Vendeur2 }}</td>
                <td>{{ produit.Introduction }}</td>
                <td>{{ produit.TitreSecondaire }}</td>
                <td>{{ produit.TitreConclusion }}</td>
                <td>{{ produit.Conclusion }}</td>
                <td>{{ produit.image }}</td>
                <td>{{ produit.dateDeCreation ? produit.dateDeCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_produit_images_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_images_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_images_new') }}">Create new</a>
{% endblock %}
