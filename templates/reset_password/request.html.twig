{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}

<div class="row d-flex justify-content-center text-center">
    <div class="card py-3 m-1 col-6" style="width: 35rem;"> 

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialiser votre mot de passe</h1>
    <div class="card-body">

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-lg btn-info mt-3">Envoyer un e-mail de réinitialisation</button>
    {{ form_end(requestForm) }}
    </div>
</div>
{% endblock %}
