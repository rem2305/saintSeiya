{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

<div class="row d-flex justify-content-center text-center">
    <div class="card py-3 m-1 col-6" style="width: 35rem;">

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


    <h1 >Connectez-vous</h1>
    {# <input type="pseudo" value="" placeholder="pseudo" name="pseudo" id="inputPseudo" class="form-control mt-4" autocomplete="pseudo" required autofocus> #}
    <div class="card-body">
    <input type="email" value="{{ last_username }}" placeholder="adresse email" name="email" id="inputEmail" class="form-control mt-4" autocomplete="email" required autofocus>
    
    <input type="password" placeholder="mot de passe" name="password" id="inputPassword" class="form-control mt-4" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="mt-3">
    <a href="{{path ('app_forgot_password_request') }}"> Mot de passe oubli√© ?</a>
    </div>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</div>
    <button class="btn btn-lg btn-info mt-3" type="submit">
        Se connecter
    </button>
</form>
</div>
</div>
{% endblock %}
